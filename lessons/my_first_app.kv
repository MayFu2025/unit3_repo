#my_first_app.kv, where you write all the visuals.

Screen:
        size: 500,500

        MDLabel:
                id: my_label
                text: "Hello World"
                font_size: "30pt"
                halign: "center"

        MDRaisedButton:
                id: my_button
                text: "Click me"
                color: "white"
                md_bg_color: "#003049"
                size_hint: 0.5, 0.1
                pos_hint: {"center_x":.5, "center_y":.3}
                on_press:
                        app.button_pressed()