                                height: root.height*0.1
                                on_press: app.on_button_press('2')

                        MDRaisedButton:
                                text: '3'
                                width: root.width*0.25
                                height: root.height*0.1
                                on_press: app.on_button_press('3')

                        MDRaisedButton:
                                text: '+'
                                width: root.width*0.25
