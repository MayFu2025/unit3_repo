Screen:
        size: 1000,1000

        MDRaisedButton:
                pos: 100,100
                text: "+"


        MDBoxLayout:
                id: box_layout
                orientation: "horizontal"
                size_hint: 0.7, 0.3
                pos_hint: {"center_x":0.5, "center_y":0.5}
                halign: "center"
                valign: "center"

                MDLabel:
                        id: my_label
                        text: "Count 0"
                        halign: "center"
                        size_hint: 0.5, 1
                        pos_hint: {"center_x":0.5, "center_y":0.5}
                        font_size: "34pt"

                MDRaisedButton:
                        id: my_button
                        size_hint: 0.5, 1
                        font_size: "34pt"
                        text: "Add +1"
                        md_bg_color: "black"
                        on_press:
                                app.button_pressed()


