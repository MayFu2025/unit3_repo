Screen:
        size: 1000,1000
        md_bg_color: "white"

        MDRaisedButton:
                id: my_button
                pos: 0,0
                text: "Dark Mode"
                text_color: "#999999"
                md_bg_color: "black"
                on_press:
                        app.button_pressed()
                        if self.parent.md_bg_color == [1, 1, 1, 1]: self.parent.md_bg_color = "black"
                        else: self.parent.md_bg_color = "white"


        MDLabel:
                text: "May"
                font_style: "H2"
                halign: 'center'
                pos_hint: {"center_x": .5, "center_y": .5}